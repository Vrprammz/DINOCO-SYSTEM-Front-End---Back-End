
// 1. ดึง ID ของ user ปัจจุบัน
$user_id = get_current_user_id();

// 2. ดึงค่าจาก ACF (สำหรับ User ต้องมีคำนำหน้าว่า user_)
$line_img = get_field('line_picture_url', 'user_' . $user_id);

// 3. เช็คว่ามีรูปไหม ถ้ามีให้ใช้รูป LINE ถ้าไม่มีใช้รูป Default
if( $line_img ) {
    $show_img = $line_img;
} else {
    $show_img = 'path/to/default-image.png'; // รูปตัวคนสีเทาๆ เดิม
}
?>

<img src="<?php echo $show_img; ?>" class="profile-img" alt="Profile Picture">
